{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": [ "./src/utils/*" ],
            "@controllers/*": [ "./src/controllers/*" ],
            "@datatypes/*": [ "./src/types/*" ]
        }
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}